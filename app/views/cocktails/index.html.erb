  <div class="banner">
    <div class="container-ban">
      <h1>All Our Potions[<%= @cocktails.count %>]</h1>
      <p><em id="navbar-typed-text"></em></p>
    </div>
  </div>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <p class="btn btn-dark"><%= link_to 'Create Your Potion', new_cocktail_path %></p>
  </div>

<div>
   <ul class="cards">
      <% @cocktails.each do |cocktail| %>

      <li class="card-product">
        <div class="card-product-infos">
            <img src="https://res.cloudinary.com/dunoktrky/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max,bo_5px_solid_red,b_rgb:262c35/v1593612845/harry%20portion/Polyjuice-Potion_g6qbg0.jpg" />
