<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to cocktails_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= simple_form_for :search, url: cocktails_path(@cocktailresult), method: :get do |f| %>
          <div class="search-form-control form-group">

            <input class="navbar-lewagon form-control string required" type="text" name="search[query]" id="search_query" class='select2' />
            <button name="button" type="submit" class="btn btn-secondary">
              <i class="fas fa-search"></i>
              <% flash.each do |name, msg| %>

                  <div class="alert alert-<%= name %> fixed-top">
                    <%= msg %>
                  </div>
                <% end %>

            </button>

          </div>
        <% end %>


      </li>
      <!-- <li class="nav-item">
        <%= link_to "Add cocktail", new_cocktail_path, class: "nav-link btn btn-outline-secondary my-2 my-sm-0 ml-2" %>
      </li> -->
    </ul>
  </div>
</div>
